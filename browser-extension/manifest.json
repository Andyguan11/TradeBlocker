{
  "manifest_version": 3,
  "name": "TradingView Blocker",
  "version": "1.0",
  "description": "Blocks TradingView bottom section based on user settings",
  "permissions": [
    "storage",
    "tabs",
    "alarms"
  ],
  "host_permissions": [
    "https://www.tradingview.com/*",
    "https://piyqyopfzdrtnhjaapvu.supabase.co/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.tradingview.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}