{
  "manifest_version": 3,
  "name": "TradeBlocker",
  "version": "1.0",
  "description": "Enforce Trading discipline",
  "permissions": [
    "storage",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "*://*.tradingview.com/*",
    "*://*.ninjatrader.com/*",
    "*://*.tradovate.com/*",
    "*://*.metatrader.app/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "logo.png",
      "48": "logo.png",
      "128": "logo.png"
    }
  },
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": ["supabase.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
