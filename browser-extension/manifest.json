{
  "manifest_version": 3,
  "name": "TradeBlocker",
  "version": "1.0",
  "description": "Enforce Trading discipline",
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "*://*.tradingview.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.tradingview.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "logo.png",
      "48": "logo.png",
      "128": "logo.png"
    }
  },
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  }
}
